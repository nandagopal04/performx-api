<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

	<!-- ============================================================= -->
	<!-- 1️⃣ GLOBAL PROPERTIES -->
	<!-- ============================================================= -->
	<property name="LOG_PATH" value="logs" />
	<property name="APP_NAME" value="PerformX" />
	<property name="MAX_FILE_SIZE" value="10MB" />
	<property name="MAX_HISTORY" value="10" />

	<!-- ============================================================= -->
	<!-- 2️⃣ CONSOLE APPENDER (Human-Readable for Local Dev) -->
	<!-- ============================================================= -->
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<!-- Pattern = timestamp | log level | thread | class | message -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} -
				%msg%n</pattern>
		</encoder>
	</appender>

	<!-- ============================================================= -->
	<!-- 3️⃣ JSON FILE APPENDER (Cloud & Analysis Ready) -->
	<!-- ============================================================= -->
	<appender name="JSON_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/${APP_NAME}.json</file>

		<!-- Rolling policy: rotate when file exceeds max size -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/archive/${APP_NAME}-%d{yyyy-MM-dd}.%i.json
			</fileNamePattern>
			<maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
			<maxHistory>${MAX_HISTORY}</maxHistory>
		</rollingPolicy>

		<!-- JSON Encoder -->
		<encoder
			class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
			<providers>
				<timestamp>
					<timeZone>Asia/Kolkata</timeZone>
				</timestamp>
				<version />
				<loggerName />
				<threadName />
				<logLevel />
				<message />
				<context />
				<mdc /> <!-- includes requestId, userId, etc. -->
				<arguments />
				<stackTrace />
			</providers>
		</encoder>
	</appender>

	<!-- ============================================================= -->
	<!-- 4️⃣ LOGGER CONFIGURATIONS -->
	<!-- ============================================================= -->
	<!-- Hide excessive library logs -->
	<logger name="org.springframework" level="INFO" />
	<logger name="org.hibernate" level="WARN" />
	<logger name="com.zaxxer.hikari" level="WARN" />
	<logger name="org.apache.catalina" level="WARN" />
	<logger name="org.apache.coyote" level="WARN" />

	<!-- ============================================================= -->
	<!-- 5️⃣ ROOT LOGGER (Applies Globally) -->
	<!-- ============================================================= -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="JSON_FILE" />
	</root>

</configuration>
